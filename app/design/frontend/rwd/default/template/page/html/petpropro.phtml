<div class="gigya-screen-set" id="progressive-profiling" data-width="800" data-height="400" style="display: none">
    
    <!-- Profile update Screen -->
    <div class="gigya-screen" id="pet-nb-capture" data-width="auto" data-caption="More information about your pets" >
        <form class="gigya-profile-form" data-on-success-screen="pet-1-capture" id="gigya-profile-form">
