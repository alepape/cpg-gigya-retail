    <div class="gigya-screen" id="pet-1-capture" data-width="auto" data-caption="More information about your pets" >
        <form class="gigya-profile-form" id="pet-1-capture-form">
          <div class="gigya-container" >
              <div class="gigya-layout-row" style="margin-bottom:20px;">
                <label class="gigya-composite-control gigya-composite-control-label" style="text-align: left;" >Tell us more about your pet #1</label>
              </div>
              <div class="gigya-layout-row" style="margin-bottom:20px;">
                <div class="gigya-composite-control gigya-composite-control-textbox">
                    <select id="data.pet.pets[0].type" tabindex="0" style="width:100%"><option value="">Type</option><option value="cat">Cat</option><option value="dog">Dog</option></select>
                </div>
              </div>
              <div class="gigya-layout-row" style="margin-bottom:20px;">
                <!--<div class="gigya-layout-cell" >-->
                <div class="gigya-composite-control gigya-composite-control-textbox">
                  <input type="text" id="data.pet.pets[0].breed" class="gigya-input-text" tabindex="0" style="display: inline-block; font-size: 13px; font-family: 'Raleway', 'Helvetica Neue', Verdana, Arial, sans-serif; font-weight: 600; height: 24px;" data-gigya-placeholder="Breed">
                </div>
              </div>
              <div class="gigya-layout-row" style="margin-bottom:20px;">
                <div class="gigya-composite-control gigya-composite-control-textbox">
                  <input type="text" class="gigya-input-text" id="data.pet.pets[0].name" style="display: inline-block; font-size: 13px; font-family: 'Raleway', 'Helvetica Neue', Verdana, Arial, sans-serif; font-weight: 600; height: 24px;" data-gigya-placeholder="Name">
                </div>
              </div>
              <div class="gigya-layout-row" style="margin-bottom:20px;">
                <div class="gigya-composite-control gigya-composite-control-dropdown">
                  <select id="data.pet.pets[0].age" data-display-name="" style="width:100%"><option value="">Age</option><option value="1">1</option><option value="2">2</option><option value="3">3</option><option value="4">4</option><option value="5">5</option><option value="6">6</option><option value="7">7</option><option value="8">8</option><option value="9">9</option><option value="10">10</option><option value="11">11</option><option value="12">12</option><option value="13">13</option><option value="14">14</option><option value="15">15</option><option value="16">16</option><option value="17">17</option><option value="18">18</option><option value="19">19</option><option value="20">20</option><option value="21">21</option><option value="22">22</option><option value="23">23</option><option value="24">24</option><option value="25">25</option><option value="26">26</option><option value="27">27</option><option value="28">28</option><option value="29">29</option><option value="30">30</option><option value="31">31</option></select>
                  <span class="gigya-error-msg" data-bound-to="data.pet.pets[0].age"></span>
                </div>
              </div>
                <!--</div>-->
          </div>
            
          <div class="gigya-clear"></div>
        </form>
        <div class="gigya-layout-row" style="margin-bottom:20px;">
          <button class="button" value="Save" style="float:right;" tabindex="0" onclick="processPetProPro(0,'data.pet.pets[0]', 'progressive-profiling');">Save</button>
          <div class="gigya-clear"></div>
        </div>
    </div>

</div>
